<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/dark_blue</item>
        <item name="android:colorBackground">@color/background</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/gray</item>
    </style>

    <style name="LayoutHeightWrapWidthMatchStyling">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LayoutHeightWrapWidthMatchStyling.Padding">
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="LayoutHeightWrapWidthMatchStyling.Padding.Top">
        <item name="android:paddingTop">@dimen/padding_medium</item>
    </style>

    <style name="TextStyleNormal">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:drawablePadding">@dimen/padding_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="TextStyleNormal.Red">
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="TextStyleNormal.placeholderColor">
        <item name="android:textColor">@color/placeholder_text_color</item>
        <item name="android:textColorHint">@color/placeholder_text_color</item>
        <item name="android:padding">@dimen/padding_large</item>
    </style>
    <style name="TextStyleNormal.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="TextStyleNormal.White">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextStyleNormal.Radio">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="buttonTint">@color/border</item>
    </style>

    <style name="TextStyleNormal.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextStyleNormal.Large.Red">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="LayoutHeightWrapWidthMatchStyling.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    <style name="TextStyleNormal.Bottom_Button" parent="TextStyleNormal.White">
        <item name="android:textSize">@dimen/text_size_large30</item>
        <item name="android:background">@drawable/button_selecter</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="TextStyleNormal.Bottom_Button.White">

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyleNormal.Large30">
        <item name="android:textSize">@dimen/text_size_large30</item>
    </style>
    <style name="TextStyleNormal.Large30.borderColor">
        <item name="android:textColor">@color/border</item>
        <item name="android:layout_margin">@dimen/margin_medium</item>
    </style>
    <style name="TextStyleNormal.Large35">
        <item name="android:textSize">@dimen/text_size_large35</item>
    </style>
    <style name="TextStyleNormal.Large30.margin">
        <item name="android:layout_margin">@dimen/margin_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleNormal.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextStyleNormal.Small.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="TextStyleNormal.Small.Red">
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="TextStyleNormal.Small.White">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="TextStyleNormal.Large.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="button">

    </style>




    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
