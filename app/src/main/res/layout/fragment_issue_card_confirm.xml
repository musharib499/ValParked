<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/llShowCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCarNo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/llShowCard"
            android:gravity="center"
            android:keepScreenOn="true"
            tools:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large30" />

        <ImageView
            android:id="@+id/imIssueCardCheck"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:src="@drawable/ic_greenchk" />

        <TextView
            android:id="@+id/tvError"
            style="@style/TextStyleNormal.Large35"
            android:textColor="@color/green"
            android:gravity="center"
            android:text="Card Created\nSuccessfully" />

    </LinearLayout>

