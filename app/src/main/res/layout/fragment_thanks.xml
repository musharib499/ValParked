<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_xlarge"
    android:layout_gravity="center|center_horizontal"
    android:gravity="center_horizontal"
    android:background="@color/background"
    tools:context="val.com.velparked.fragment.ThanksFragment">

    <TextView
        android:id="@+id/tvThank"
        style="@style/TextStyleNormal.Large35"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/thank_you"
        android:textColor="@color/green"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvMessage"
        style="@style/TextStyleNormal.Gray"
        android:layout_below="@+id/tvThank"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_20dp"
        android:text="@string/your_vehicle_will_be_on_gate_soon" />

    <TextView
        android:id="@+id/tvCarNo"
        style="@style/TextStyleNormal.Large30.borderColor"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_below="@id/tvMessage" />


    <TextView
        style="@style/TextStyleNormal.Small"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/margin_20dp"
        android:text="@string/hope_you_enjoyed_here"
        android:textStyle="italic"
        android:textColor="@color/green" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:gravity="center"
    android:layout_marginBottom="11dp"
    android:layout_alignParentEnd="true">
    <Button
        android:id="@+id/btnOk"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/reactagular_black"
        android:padding="@dimen/padding_medium"
        android:text="OK"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_large30"

        />
</LinearLayout>



</RelativeLayout>
